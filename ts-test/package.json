{
  "name": "ts-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:run": "rm -rf dist && tsc && node dist/src/app.js",
    "ts:run": "ts-node src/app.ts",
    "nodemon": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/app.ts",
    "test": "ts-mocha test/**/*.spec.ts",
    "nyc:test": "nyc ts-mocha test/**/*.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^17.0.31",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
